<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>cn.ching.parent</groupId>
        <artifactId>ching-parent</artifactId>
        <version>1.0-RELEASE</version>
    </parent>
    <groupId>cn.ching.mandal</groupId>
    <artifactId>mandal-bom</artifactId>
    <version>0.0.2-RELEASE</version>
    <name>mandal-bom</name>
    <description>mandal dependencies bom.(specified mandal self dependencies)</description>
    <packaging>pom</packaging>

    <inceptionYear>2018</inceptionYear>
    <licenses>
        <license>
            <name>Apache 2</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-cluster</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-common</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-config-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-config-spring</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-container-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-container-spring</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-monitor-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-monitor-default</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-registry-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-registry-default</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-registry-multicast</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-registry-zookeeper</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-remoting-zookeeper</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-rpc-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-rpc-injvm</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.ching.mandal</groupId>
                <artifactId>mandal-rpc-rmi</artifactId>
                <version>${project.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <profiles>
        <profile>
            <id>release</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>